#!/usr/bin/bash

toggle() {
  if (($(ps -aux | grep [p]icom | wc -l) > 0)); then
    pkill -9 picom
    notify-send -u low 'picom' "Blur Disabled"
  else
    picom -b --config=/home/hashem/.config/picom.conf &
    notify-send -u low 'picom' "Blur Enabled"
  fi
}

change_icon() {
  if (($(ps -aux | grep [p]icom | wc -l) > 0)); then
    icon=""
  else
    icon=""
  fi
}

case $BLOCK_BUTTON in
	1) toggle ;;
	6) "$TERMINAL" -e "$EDITOR $0" ;;
esac

change_icon
echo ${icon}

